using Xunit;
using Moq;
using TodoList.Domain.Interfaces;

namespace TodoList.Tests;

public class MoqVerificationTest
{
    [Fact]
    public void Moq_ShouldBeImportedCorrectly()
    {
        // Arrange & Act
        var mock = new Mock<ITaskRepository>();
        
        // Assert
        Assert.NotNull(mock);
        Assert.NotNull(mock.Object);
    }
    
    [Fact]
    public void Moq_ShouldSetupMethodsCorrectly()
    {
        // Arrange
        var mock = new Mock<ITaskRepository>();
        mock.Setup(r => r.GetTaskById(1))
            .ReturnsAsync((TodoList.Domain.TaskEntity?)null);
        
        // Act
        var result = mock.Object.GetTaskById(1);
        
        // Assert
        Assert.NotNull(result);
        mock.Verify(r => r.GetTaskById(1), Times.Once);
    }
}