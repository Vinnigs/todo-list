  <PropertyGroup>
    <VSTestUseMSBuildOutput>false</VSTestUseMSBuildOutput>
    <VSTestCollectCodeCoverage>false</VSTestCollectCodeCoverage>
    <VSTestLogger>console;verbosity=quiet</VSTestLogger>
    <VSTestResultsDirectory>$(MSBuildProjectDirectory)\TestResults</VSTestResultsDirectory>
  </PropertyGroup>
  
  <PropertyGroup Condition="'$(IsTestProject)' == 'true'">
    <EnableSourceLink>false</EnableSourceLink>
    <EmbedUntrackedSources>false</EmbedUntrackedSources>
    <DebugSymbols>true</DebugSymbols>
    <DebugType>portable</DebugType>
    <GenerateDocumentationFile>false</GenerateDocumentationFile>
    <IsPackable>false</IsPackable>
    <VSTestCLIRunSettings>--logger:console;verbosity=quiet</VSTestCLIRunSettings>
  </PropertyGroup>
</Project>