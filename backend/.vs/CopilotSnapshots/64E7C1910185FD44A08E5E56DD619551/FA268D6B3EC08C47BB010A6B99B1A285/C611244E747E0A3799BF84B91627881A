using Xunit;
using Moq;
using TodoList.Domain.Interfaces;
using TodoList.Domain;

namespace TodoList.Tests;

public class MoqVerificationTest
{
    [Fact]
    public void Moq_ShouldCreateMockSuccessfully()
    {
        // Arrange & Act
        var mockRepository = new Mock<ITaskRepository>();
        
        // Assert - Se chegou até aqui, o Moq está funcionando
        Assert.NotNull(mockRepository);
        Assert.NotNull(mockRepository.Object);
    }
    
    [Fact]
    public void Moq_ShouldSetupAndVerifyMethods()
    {
        // Arrange
        var mockRepository = new Mock<ITaskRepository>();
        var testTask = new TaskEntity { Id = 1, Title = "Test" };
        
        mockRepository.Setup(x => x.GetTaskById(1))
                     .ReturnsAsync(testTask);
        
        // Act
        var result = mockRepository.Object.GetTaskById(1);
        
        // Assert
        Assert.NotNull(result);
        mockRepository.Verify(x => x.GetTaskById(1), Times.Once);
    }
}